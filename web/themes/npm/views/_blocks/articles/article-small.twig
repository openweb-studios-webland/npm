{% set image = TimberImage(article.image) %}

{% if image.src %}
  <img
    class="mb-20"
    src="{{ image.src | resize(720, 540, 'center') }}"
    alt="{{ image.alt }}"
  />
{% endif %}

<div class="flex flex-wrap mb-5 -mx-10 text-gray-a11y text-11">
  <div class="border-r border-gray-a11y leading-none mb-10 px-10">
    {{ article.post_type | title }}
  </div>

  <div class="leading-none mb-10 px-10">
    {{ article.post_date | date('F Y') }}
  </div>
</div>

<h3 class="heading-7 mb-10">
  {{ article.title }}
</h3>

{% if article.text %}
  <p class="text text-14">
    {{ article.text }}
  </p>
{% endif %}

<a class="link text-14" href="{{ article.button_link ?? article.link }}">
  {{ article.button_text ?? 'Read more' }}
  {{ svg('link') }}
</a>
{% endif %}
