{% set image = TimberImage(article.image) %}

<div class="flex flex-col h-full">
  {% if image.src %}
    <div class="mb-20">
      <img src="{{ image.src | resize(720, 540, 'center') }}" alt="{{ image.alt }}" />
    </div>
  {% endif %}

  <div class="flex-grow">
    <div class="flex flex-wrap mb-5 -mx-10 text-gray-dark text-11">
      <div class="border-r border-gray-dark leading-none mb-10 px-10">
        {{ article.post_type | title }}
      </div>

      <div class="leading-none mb-10 px-10">
        {{ article.post_date | date('F Y') }}
      </div>
    </div>

    <h3 class="heading-7 mb-10">
      {{ article.title }}
    </h3>

    {% if article.text %}
      <p class="text text-14">
        {{ article.text }}
      </p>
    {% endif %}
  </div>

  {% set button_link = article.button_link | length ? article.button_link : article.link %}
  {% set button_text = article.button_text | length ? article.button_text : 'Read more' %}

  <div>
    <a
      class="arrow mt-20 text-14"
      href="{{ button_link }}"
      data-track-gtm="Call to Action|{{ current_url }}|{{ button_text }}:{{ button_link }}"
    >
      {{ button_text }}
      {{ svg('arrow-right') }}
    </a>
  </div>
</div>
