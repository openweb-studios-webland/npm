<div class="flex flex-col h-full">
  {% if article.image %}
    <div class="mb-20">
      {{ macros.responsiveImage(article.image, 720, 540) }}
    </div>
  {% endif %}

  <div class="flex-grow">
    <div class="flex flex-wrap leading-none mb-15 -mx-10 text-gray-dark text-11">
      <div class="border-r border-gray-dark px-10">
        {{ article.post_type | title }}
      </div>

      <div class="px-10">
        {{ article.post_date | date('F Y') }}
      </div>
    </div>

    <h3 class="heading-7 mb-10">
      {{ article.title }}
    </h3>

    {% if article.text %}
      <p class="text text-14">
        {{ article.text }}
      </p>
    {% endif %}
  </div>

  {% set button_link = article.button_link | length ? article.button_link : article.link %}
  {% set button_text = article.button_text | length ? article.button_text : 'Read more' %}

  <div>
    <a
      class="arrow mt-20 text-14"
      href="{{ button_link }}"
      data-track-gtm="Call to Action|{{ current_url }}|{{ button_text }}:{{ button_link }}"
    >
      {{ button_text }}
      {{ svg('arrow-right') }}
    </a>
  </div>
</div>
