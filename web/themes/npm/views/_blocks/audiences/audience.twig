<div class="section flex flex-col h-full lg:pl-60">
  <div class="flex-1">
    {% if audience.text %}
      <div class="text">
        {{ audience.text }}
      </div>
    {% endif %}

    {% if audience.stats | length %}
      <div class="flex flex-wrap mt-40 -mb-40 -mx-30">
        {% for stat in audience.stats %}
          <div class="mb-40 px-30 md:w-1/2 lg:w-1/2 xl:w-1/3">
            {% include '_blocks/stats/stat.twig' ignore missing %}
          </div>
        {% endfor %}
      </div>
    {% endif %}
  </div>

  {% if audience.attribution %}
    <p class="text italic mt-25 opacity-75 text-11">
      {{ audience.attribution }}
    </p>
  {% endif %}
</div>
