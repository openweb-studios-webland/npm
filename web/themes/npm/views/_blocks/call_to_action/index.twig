{% set block = block ?? null %}

{% if block %}
  <section class="bg-blue" data-label="{{ block.acf_fc_layout }}">
    <div class="container">
      <div class="md:flex md:items-end md:-mx-30">
        <div class="hidden md:block md:px-30 md:w-5/12 lg:w-1/3">
          {% set image = TimberImage(block.image) %}

          {% if image %}
            <img
              src="{{ image.src | resize(1440, 1440) }}"
              srcset="{{ image.srcset }}"
              alt="{{ image.alt }}"
            />
          {% endif %}
        </div>
        <div class="section text-center text-white md:px-30 md:text-left md:w-7/12 lg:w-1/2">
          {% if block.heading %}
            <h2 class="heading-2">
              {{ block.heading }}
            </h2>
          {% endif %}

          {% if block.button_link and block.button_text %}
            <a class="button md:button-white" href="{{ block.button_link }}">
              {{ block.button_text }}
            </a>
          {% endif %}
        </div>
      </div>
    </div>
  </section>
{% endif %}
