{% set block = block ?? null %}

{% if block %}
  <section class="section bg-gray" data-label="{{ block.acf_fc_layout }}">
    <div class="container">
      {% if block.heading %}
        <h2 class="heading-3 text-center">
          {{ block.heading }}
        </h2>
      {% endif %}

      {% if block.cards | length %}
        <div class="flex flex-wrap -mb-30 lg:flex-no-wrap">
          {% for card in block.cards %}
            <div class="mb-30 flex-1 w-full lg:w-auto">
              {% include '_blocks/cards/card.twig' ignore missing with {
                card: card,
              } only %}
            </div>
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </section>
{% endif %}
