{% set block = block ?? null %}

{% if block %}
  <section class="section clearfix pt-0 relative" data-label="featured-content-services">
    <div class="float-left -mt-30 w-full lg:-mt-50">
      {% if block.featured_content | length %}
        <div class="container-lg">
          <div class="flex flex-wrap justify-center -mb-30 -mx-10 md:mx-0">
            {% for featured_content in block.featured_content %}
              <div class="mb-30 w-full md:w-1/2{{ block.featured_content | length > 2 ? ' lg:w-1/3' }}">
                {% include '_blocks/featured-content/featured-content.twig' ignore missing %}
              </div>
            {% endfor %}
          </div>
        </div>
      {% endif %}
    </div>
  </section>
{% endif %}
