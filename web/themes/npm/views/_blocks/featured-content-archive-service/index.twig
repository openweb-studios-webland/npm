{% set block = block ?? null %}

{% if block %}
  <section class="section -mt-25 pt-0" data-label="featured-content-archive-service">
    <div class="container-lg">
      {% if block.featured_content | length %}
        <div class="flex flex-wrap justify-center -mb-20 -mx-10 md:mx-0">
          {% for featured_content in block.featured_content %}
            <div class="mb-20 w-full md:w-1/2{{ block.featured_content | length > 2 ? ' lg:w-1/3' }}">
              {% include '_blocks/featured-content/featured-content.twig' ignore missing %}
            </div>
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </section>
{% endif %}
