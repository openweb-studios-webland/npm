{% set block = block ?? null %}

{% if block %}
  <section class="section bg-{{ block.color_select }}" data-label="featured-content">
    <div class="{{ block.color_select == 'gradient' ? 'text-white ' }}container-sm text-center">
      {% if block.heading %}
        <h2 class="heading-3">
          {{ block.heading }}
        </h2>
      {% endif %}

      {% if block.text %}
        <div class="text">
          {{ block.text }}
        </div>
      {% endif %}
    </div>

    {% if block.featured_content | length %}
      <div class="container-lg pt-30">
        <div class="flex flex-wrap justify-center -mb-30 -mx-10 md:mx-0 lg:-mb-50">
          {% for featured_content in block.featured_content %}
            <div class="mb-30 w-full md:w-1/2 lg:mb-50{{ block.featured_content | length > 2 ? ' lg:w-1/3' }}">
              {% include '_blocks/featured-content/featured-content.twig' ignore missing %}
            </div>
          {% endfor %}
        </div>
      </div>
    {% endif %}
  </section>
{% endif %}
