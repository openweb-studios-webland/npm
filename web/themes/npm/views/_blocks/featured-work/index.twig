{% set block = block ?? null %}

{% if block %}
  <section class="section" data-label="work">
    <div class="container">
      {% if block.featured_work %}
        {% set featured_work = Post(block.featured_work) %}

        <div class="flex flex-wrap items-center -mb-30 -mx-20">
          <div class="mb-30 px-20 w-full lg:w-2/3">
            {% set featured_image = TimberImage(featured_work.featured_image) %}

            {% if featured_image %}
              <img src="{{ featured_image.src | resize(1080, 675, 'center') }}" alt="{{ featured_image.alt }}" />
            {% endif %}
          </div>

          <div class="px-20 w-full lg:w-1/3">
            <h4 class="heading-6 mb-20">
              Featured Work
            </h4>

            <h3 class="heading-7 mb-10">
              {{ featured_work.title }}
            </h3>

            {% if featured_work.text %}
              <p class="text text-14">
                {{ featured_work.text }}
              </p>
            {% endif %}

            <a class="link text-14">
              View the work {{ svg('link') }}
            </a>
          </div>
        </div>
      {% endif %}
    </div>
  </section>
{% endif %}
