{% set block = block ?? null %}

{% if block %}
  <section class="section" data-label="featured-work">
    <div class="container">
      {% if block.featured_work %}
        {% set work = Post(block.featured_work) %}

        <div class="flex flex-wrap items-center -mx-20">
          {% if work.featured_image %}
            <div class="px-20 w-full lg:w-2/3">
              <a class="block" href="{{ work.link }}">
                {{ macros.responsiveImage(work.featured_image, 1080, 679) }}
              </a>
            </div>
          {% endif %}

          <div class="mt-30 px-20 w-full lg:w-1/3">
            <h4 class="heading-6 mb-20">
              Featured Work
            </h4>

            <h3 class="heading-7 mb-15">
              {{ work.title }}
            </h3>

            {% if work.text %}
              <p class="text text-14">
                {{ work.text }}
              </p>
            {% endif %}

            <a
              class="arrow mt-20 text-14"
              href="{{ work.link }}"
              data-track-gtm="Call to Action|{{ current_url }}|View the work:{{ work.link }}"
            >
              View the work
              {{ svg('arrow-right') }}
            </a>
          </div>
        </div>
      {% endif %}
    </div>
  </section>
{% endif %}
