{% set block = block ?? null %}

{% if block %}
  <section class="section" data-label="hero-about">
    <div class="container">
      <div class="flex -mx-30">
        <div class="px-30 w-full lg:w-3/4">
          {% if block.subheading %}
            <div class="heading-6 mb-20">
              {{ block.subheading }}
            </div>
          {% endif %}

          {% if block.heading %}
            <h1 class="heading-3">
              {{ block.heading }}
            </h1>
          {% endif %}

          {% if block.text %}
            <div class="text text-16 lg:text-18">
              {{ block.text }}
            </div>
          {% endif %}

          {% if block.button_link and block.button_text %}
            <a class="button mt-25 lg:mt-30" href="{{ block.button_link }}">
              {{ block.button_text }}
            </a>
          {% endif %}
        </div>
      </div>
    </div>
  </section>
{% endif %}
