{% set block = block ?? null %}

{% if block %}
  <section class="bg-gradient py-30 text-white md:py-40 lg:py-50">
    <div class="container">
      <div class="flex flex-wrap items-center -mx-30">
        <div class="px-30 w-full lg:w-1/3">
          {% if block.heading %}
            <h1 class="heading-2 lg:mb-0">
              {{ block.heading }}
            </h1>
          {% endif %}
        </div>

        <div class="px-30 w-full lg:w-2/3">
          {% if block.text %}
            <p class="text">
              {{ block.text }}
            </p>
          {% endif %}
        </div>
      </div>
    </div>
  </section>
{% endif %}
