{% set block = block ?? null %}

{% if block %}
  {% set image = TimberImage(block.background_image) %}

  <section
    class="section bg-center bg-cover pb-75 relative text-white md:pb-100"
    style="background-image: url('{{ image.src | resize(1920, 700, 'center') }}');"
    data-label="hero-services"
  >
    <div class="absolute bg-black inset-0 opacity-90"></div>

    <div class="container">
      <div class="relative w-full lg:w-2/3">
        <div class="heading-6 mb-20">
          Services
        </div>

        {% if block.heading %}
          <h1 class="heading-2">
            {{ block.heading }}
          </h1>
        {% endif %}

        {% if block.text %}
          <div class="text text-16 lg:text-18">
            {{ block.text }}
          </div>
        {% endif %}

        {% if block.button_link and block.button_text %}
          <a class="button mt-25 lg:mt-30" href="{{ block.button_link }}">
            {{ block.button_text }}
          </a>
        {% endif %}
      </div>
    </div>
  </section>
{% endif %}
