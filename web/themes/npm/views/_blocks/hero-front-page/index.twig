{% set block = block ?? null %}

{% if block %}
  <section class="section bg-blue pb-0 lg:pb-150" data-label="hero-front-page">
    <div class="container">
      <div class="flex flex-wrap items-center">
        <div class="w-full lg:w-1/2">
          <div class="pb-50 text-white md:pb-75 lg:pb-0 lg:relative lg:z-10">
            {% if block.heading %}
              <h1 class="heading-1">
                {{ block.heading }}
              </h1>
            {% endif %}

            {% if block.text %}
              <div class="text text-16 md:text-20 lg:text-24">
                {{ block.text }}
              </div>
            {% endif %}

            {% if block.button_link and block.button_text %}
              <a class="button mt-25 lg:mt-30" href="{{ block.button_link }}">
                {{ block.button_text }}
              </a>
            {% endif %}
          </div>
        </div>

        <div class="w-full lg:clearfix lg:w-1/2">
          {% set image = TimberImage(block.image) %}

          {% if image %}
            <img
              class="pin-r max-w-none -mx-20"
              src="{{ image.src | resize(1440, 810) }}"
              srcset="{{ image.srcset }}"
              alt="{{ image.alt }}"
            />
          {% endif %}
        </div>
      </div>
  </section>
{% endif %}
