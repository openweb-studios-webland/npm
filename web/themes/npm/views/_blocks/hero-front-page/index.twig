{% set block = block ?? null %}

{% if block %}
  <section class="bg-blue py-30 text-white" data-label="hero-front-page">
    <div
      class="overflow-hidden"
      data-module="carousel"
      data-carousel-autoplay="true"
    >
      <div class="carousel-track flex relative" data-carousel-track>
        {% for item in block.items %}
          <div class="carousel-item flex-0 w-full" data-carousel-item>
            {% include '_blocks/hero-front-page/item.twig' ignore missing %}
          </div>
        {% endfor %}
      </div>

      <div class="mb-20 -mt-20 relative text-right z-10">
        <button class="leading-tighter mr-20 text-blue-light" data-carousel-autoplay-pause>
          {{ svg('pause', { classes: 'float-left mr-5 mt-1' }) }}
          Pause
        </button>
      </div>
    </div>
  </section>
{% endif %}
