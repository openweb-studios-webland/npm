{% set block = block ?? null %}

{% if block %}
  <section class="section bg-blue text-white" data-label="hero-single-report">
    <div class="container -mb-50">
      <div class="mb-50">
        <div class="heading-6 mb-20">
          Insights
        </div>

        <h1 class="heading-2">
          {{ post.title }}
        </h1>

        <div class="flex flex-wrap mb-5 -mx-10 text-11">
          <div class="border-r border-white leading-none mb-10 px-10">
            {{ post.post_type | title }}
          </div>

          <div class="leading-none mb-10 px-10">
            {{ post.post_date | date('F Y') }}
          </div>
        </div>
      </div>

      <div class="flex flex-wrap items-center -mx-30">
        {% set image = TimberImage(block.image) %}

        {% if image.src %}
          <div class="mb-50 px-30 w-full lg:w-1/2">
            <img
              class="max-w-screen -mx-20 lg:max-w-full lg:mx-0"
              src="{{ image.src | resize(1440, 810, 'center') }}"
              alt="{{ image.alt }}"
            />
          </div>
        {% endif %}

        <div class="mb-50 px-30 w-full lg:w-1/2">
          {% if block.text %}
            <div class="text">
              {{ block.text }}
            </div>
          {% endif %}

          {% if fields.download.url %}
            <a class="button mt-25 lg:mt-30" href="{{ fields.download.url }}" download>
              Download the Report ({{ fields.download.subtype | upper }})
            </a>
          {% endif %}
        </div>
      </div>
    </div>
  </section>
{% endif %}
