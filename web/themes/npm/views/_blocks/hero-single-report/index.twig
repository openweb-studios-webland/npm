{% set block = block ?? null %}

{% if block %}
  <section class="bg-blue py-50 text-white" data-label="hero-single-report">
    <div class="container -mb-50">
      <div class="mb-50">
        <div class="heading-6 mb-10">
          Insights
        </div>

        <h1 class="heading-2 mb-15">
          {{ post.title }}
        </h1>

        <div class="flex flex-wrap mb-5 -mx-10 text-11">
          <div class="border-r border-white leading-none mb-10 px-10">
            {{ post.post_type | title }}
          </div>

          <div class="leading-none mb-10 px-10">
            {{ post.post_date | date('F Y') }}
          </div>
        </div>
      </div>

      <div class="flex flex-wrap items-center -mx-30">
        {% set image = TimberImage(block.image) %}

        {% if image.src %}
          <div class="mb-50 px-30 w-full lg:w-1/2">
            <img src="{{ image.src | resize(1080, 607, 'center') }}" alt="{{ image.alt }}" />
          </div>
        {% endif %}

        <div class="mb-50 px-30 w-full lg:w-1/2">
          {% if block.text %}
            <div class="text">
              {{ block.text }}
            </div>
          {% endif %}

          {% if fields.download.url %}
            <a
              class="button mt-25 lg:mt-30"
              href="{{ fields.download.url }}"
              download
              data-track-gtm="Download|Report|{{ block.specs_download.title }}"
            >
              {{ svg('report', { classes: 'inline-block mr-5' }) }}
              Download the Report ({{ fields.download.subtype | upper }})
            </a>
          {% endif %}
        </div>
      </div>
    </div>
  </section>
{% endif %}
