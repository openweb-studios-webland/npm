{% set block = block ?? null %}

{% if block %}
  <div class="bg-blue">
    <div class="container">
      <div class="flex flex-wrap items-center -mx-30">
        <div class="px-30 w-full lg:w-7/12">
          <div class="pt-50 text-white lg:py-50">
            <div class="heading-6 mb-20">
              Work
            </div>

            {% if block.heading %}
              <h1 class="heading-3">
                {{ block.heading }}
              </h1>
            {% endif %}

            {% if block.text %}
              <div class="text">
                {{ block.text }}
              </div>
            {% endif %}

            {% if block.button_link and block.button_text %}
              <a class="button mt-25 lg:mt-30" href="{{ block.button_link }}">
                {{ block.button_text }}
              </a>
            {% endif %}
          </div>
        </div>

        <div class="px-30 w-full lg:w-5/12">
          {% set image = TimberImage(block.image) %}

          {% if image.src %}
            <img
              class="pin-r"
              src="{{ image.src | resize(1080, 1080, 'center') }}"
              alt="{{ image.alt }}"
            />
          {% endif %}
        </div>
      </div>
    </div>
  </div>
{% endif %}
