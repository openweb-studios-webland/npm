{% set block = block ?? null %}

{% if block %}
  <section class="section bg-blue pb-0 lg:pb-150" data-label="hero">
    <div class="lg:flex lg:justify-end lg:relative">
      <div class="lg:absolute lg:h-full lg:w-full lg:z-10">
        <div class="container lg:h-full">
          <div class="lg:flex lg:h-full lg:items-center lg:-mx-30">
            <div class="text-white pb-50 md:pb-75 lg:pb-0 lg:px-30 lg:w-1/2">
              {% if block.heading %}
                <h1 class="head-1">
                  {{ block.heading }}
                </h1>
              {% endif %}

              {% if block.text %}
                <div class="text text-16 md:text-20 lg:text-24">
                  {{ block.text }}
                </div>
              {% endif %}

              {% if block.button_link and block.button_text %}
                <a class="button-white mt-30 lg:button-pink" href="{{ block.button_link }}">
                  {{ block.button_text }}
                </a>
              {% endif %}
            </div>
            <div class="hidden h-full w-0 lg:block"></div>
          </div>
        </div>
      </div>
      <div class="lg:shadow lg:w-2/3">
        {% set image = TimberImage(block.image) %}

        {% if image %}
          <img
            src="{{ image.src | resize(1440, 810) }}"
            srcset="{{ image.srcset }}"
            alt="{{ image.alt }}"
          />
        {% endif %}
      </div>
    </div>
  </section>
{% endif %}
