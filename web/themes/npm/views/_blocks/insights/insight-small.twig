{% set image = TimberImage(insight.image) %}

{% if image.src %}
  <img
    class="mb-20"
    src="{{ image.src | resize(720, 540, 'center') }}"
    alt="{{ image.alt }}"
  />
{% endif %}

<div class="flex flex-wrap mb-5 -mx-10 text-gray-a11y text-11">
  <div class="border-r border-gray-a11y leading-none mb-10 px-10">
    {{ insight.post_type | title }}
  </div>

  <div class="leading-none mb-10 px-10">
    {{ insight.post_date | date('F Y') }}
  </div>
</div>

<h3 class="heading-7 mb-10">
  {{ insight.title }}
</h3>

{% if insight.text %}
  <p class="text text-14">
    {{ insight.text }}
  </p>
{% endif %}

{% if insight.button_text %}
  <a class="link text-14" href="{{ insight.button_link ?? insight.link }}">
    {{ insight.button_text }}
    {{ svg('link') }}
  </a>
{% endif %}
