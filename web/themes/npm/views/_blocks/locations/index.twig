{% set block = block ?? null %}

{% if block %}
  <section class="bg-gradient text-white" data-label="locations">
    <div class="container">
      <div class="flex flex-wrap -mx-30">
        {% if block.image.id %}
          <div class="hidden px-30 w-full lg:block lg:-mt-25 lg:w-1/4">
            <div class="pin-l h-full" data-module="responsive-background-image">
              {{ macros.responsiveImage(block.image.id, 675, 1100) }}
            </div>
          </div>
        {% endif %}

        <div class="section px-30 w-full lg:w-3/4">
          <h2 class="heading-6">
            Our Offices
          </h2>

          {% if globals.locations | length %}
            <ul class="flex flex-wrap -mb-50 -mx-30">
              {% for location in globals.locations %}
                <li class="text mb-50 px-30 w-full md:w-1/2">
                  {{ location.text }}
                </li>
              {% endfor %}
            </ul>
          {% endif %}
        </div>
      </div>
    </div>
  </section>
{% endif %}
