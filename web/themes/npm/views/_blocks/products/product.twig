<a class="bg-white block flex flex-col h-full px-15 py-20 shadow-sm text-14 transition lg:p-30 hover:shadow hover:translate-t-10" href="{{ product.link }}">
  <div class="flex-grow">
    {% set platforms = product.get_terms('platform') %}

    {% if platforms | length %}
      <ul class="flex mb-30 -mx-5">
        {% for platform in platforms %}
          {% if platform.parent == 0 %}
            <li class="px-5">
              <span class="sr-only">
                {{ platform.name }}
              </span>

              {% set image = TimberImage(platform.image) %}

              {% if image.file_loc %}
                <span class="text-blue-light">
                  {{ fn('file_get_contents', image.file_loc)}}
                </span>
              {% endif %}
            </li>
          {% endif %}
        {% endfor %}
      </ul>
    {% endif %}

    <h2 class="heading-7 mb-15">
      {{ product.title }}
    </h2>

    {% if product.variants %}
      <div class="font-bold mb-15">
        {{ product.variants }}
      </div>
    {% endif %}

    {% if product.text %}
      <p class="text">
        {{ product.text }}
      </p>
    {% endif %}
  </div>

  <div>
    <span class="arrow mt-20">
      Details
      <span class="sr-only">
        for {{ product.title }}
      </span>
      {{ svg('arrow-right') }}
    </span>
  </div>
</a>
