{% set block = block ?? null %}

{% if block %}
  <section data-label="programs">
    <div class="lg:flex lg:justify-end lg:relative">
      <div class="lg:absolute lg:h-full lg:w-full lg:z-10">
        <div class="container lg:h-full">
          <div class="lg:flex lg:h-full lg:items-center lg:-mx-30">
            I'm some content
          </div>
        </div>
      </div>
      <div class="overflow-hidden pr-100 w-3/4" style="background: orange;">
        <div
          class=""
          data-module="slider"
        >
          <div class="flex relative" data-slider-track>
            {% for i in 0..10 %}
              <div class="flex-0 px-10 w-1/3" style="height: 200px; border: 1px solid red;background: pink;">
                <div class="h-full" style="border: 1px solid green">
                  Slide {{ loop.index }}
                </div>
              </div>
            {% endfor %}
          </div>

          <button data-slider-prev>
            Previous slide
          </button>

          <button data-slider-next>
            Next slide
          </button>
        </div>
      </div>
    </div>
  </section>
{% endif %}


[data-slider] {
 *   overflow:hidden;
 * }
 *
 * [data-slider-track] {
 *   display: flex;
 *   flex-flow: row nowrap;
 *   position: relative;
 *
 *   & > * {
 *     flex: 0 0 auto;
 *     position: relative;
 *     width: WIDTH_VALUE;
 *   }
 * }
