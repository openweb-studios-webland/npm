{% set uid = random() %}

<div class="bg-white h-full relative z-20">
  <button
    class="block flex flex-col h-full text-left"
    data-module="toggle"
    data-toggle-partners="{{ uid }}{{ loop.index }}0"
    aria-controls="{{ uid }}{{ loop.index }}"
  >
    {% set image = TimberImage(program.image) %}

    {% if image.src %}
      <div>
        <img src="{{ image.src | resize(450, 450, 'center') }}" alt="{{ image.alt }}" />
      </div>
    {% endif %}

    <div class="flex flex-col flex-grow p-20">
      <div class="flex-grow">
        {% if program.heading %}
          <h3 class="heading-4 mb-0">
            {{ program.heading }}
          </h3>
        {% endif %}
      </div>

      <div>
        <span class="font-bold inline-block mt-20 text-14 text-blue-denim">
          See Details
          <span class="sr-only">
            for {{ program.heading }}
          </span>
        </span>
      </div>
    </div>
  </button>

  <div
    id="{{ uid }}{{ loop.index }}"
    class="absolute bg-white inset-x-0 min-h-full px-30 py-40 shadow-sm top-0"
    aria-hidden="true"
  >
    <div class="mb-5 text-11 text-gray-dark">
      {{ program.subheading | length ? program.subheading : 'NPR Podcast' }}
    </div>

    <h3 class="heading-4 mb-20">
      {{ program.title }}
    </h3>

    {% if program.host %}
      <div class="mb-5 text-11 text-gray-dark">
        Hosted by
      </div>

      <p class="text font-bold mb-20">
        {{ program.host }}
      </p>
    {% endif %}

    {% if program.text %}
      <div class="text mb-20 text-14">
        {{ program.text }}
      </div>
    {% endif %}

    {% if program.platforms | length %}
      <div class="mb-5 text-11 text-gray-dark">
        Available on
      </div>

      <p class="font-bold mb-20 text-14">
        {% for platform in Term(program.platforms) %}
          {{ loop.last ? platform.name : platform.name ~ ', ' }}
        {% endfor %}
      </p>
    {% endif %}

    {% set topics = Post(program).get_terms('topic') %}

    {% if topics | length %}
      <div class="mb-5 text-11 text-gray-dark">
        Topics
      </div>

      <p class="mb-20 text-14">
        {{ topics | join(', ') }}
      </p>
    {% endif %}

    {% if program.button_link and program.button_text %}
      <a
        class="button w-full"
        href="{{ program.button_link }}"
        data-track-gtm="Call to Action|{{ current_url }}|{{ program.button_text }}:{{ program.button_link }}"
      >
        {{ program.button_text }}
      </a>
    {% endif %}

     <button
      class="absolute h-44 mr-5 mt-5 right-0 top-0 w-44"
      data-toggle-partner="{{ uid }}{{ loop.index }}0"
      aria-controls="{{ uid }}{{ loop.index }}"
    >
      <span class="sr-only">
        Close {{ program.heading }} Details
      </span>
      {{ svg('close', { classes: 'absolute inset-1/2 pointer-events-none translate-1/2' }) }}
    </button>
  </div>
</div>
