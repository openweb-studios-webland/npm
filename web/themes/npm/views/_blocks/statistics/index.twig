{% set block = block ?? null %}

{% if block %}
<section class="{{ block.color != 'white' ? 'bg-' ~ block.color ~ ' text-white' : 'bg-' ~ block.color }} section" data-label="statistics">
    <div class="container">
      <div class="flex flex-wrap -mx-30">
        {% if block.text %}
          <div class="mb-30 px-30 lg:mb-0 lg:w-1/3">
            {% if block.heading %}
              <h2 class="heading-4">
                {{ block.heading }}
              </h2>
            {% endif %}

            {% if block.text %}
              <div class="text">
                {{ block.text }}
              </div>
            {% endif %}

            {% if block.button_clone_link and block.button_clone_text %}
              <a class="link" href="{{ block.button_clone_link }}">
                {{ block.button_clone_text }}
                {{ svg('link') }}
              </a>
            {% endif %}
          </div>

          {% if block.statistics | length %}
            <div class="px-30 w-full lg:w-2/3">
              <div class="flex flex-wrap -mb-40 -mx-30">
                {% for statistic in block.statistics %}
                  <div class="mb-40 px-30 md:w-1/2">
                    {% include '_blocks/statistics/statistic.twig' ignore missing with {
                      statistic: statistic,
                    } only %}
                  </div>
                {% endfor %}
              </div>
            </div>
          {% endif %}
        {% else %}
          <div class="px-30 w-full">
            {% if block.heading %}
              <h2 class="heading-6">
                {{ block.heading }}
              </h2>
            {% endif %}
          </div>

          {% if block.statistics | length %}
            <div class="px-30 w-full">
              <div class="flex flex-wrap -mb-30 -mx-30 lg:-mb-40">
                {% for statistic in block.statistics %}
                  <div class="mb-30 px-30 lg:mb-40 md:w-1/2 lg:w-1/3">
                    {% include '_blocks/statistics/statistic.twig' ignore missing with {
                      statistic: statistic,
                    } only %}
                  </div>
                {% endfor %}
              </div>
            </div>
          {% endif %}
        {% endif %}
      </div>
    </div>
  </section>
{% endif %}
