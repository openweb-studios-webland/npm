{% set block = block ?? null %}

{% if block %}
  <section class="{{ block.color_select != 'white' ? 'text-white ' }}bg-{{ block.color_select }} section" data-label="statistics">
    <div class="container">
      {% if block.image %}
        <div class="flex flex-wrap -mx-30">
          <div class="px-30 w-full lg:w-2/3">
            {% if block.heading %}
              <h2 class="heading-3">
                {{ block.heading }}
              </h2>
            {% endif %}

            {% if block.statistics | length %}
              <div class="flex flex-wrap -mb-40 -mx-30">
                {% for statistic in block.statistics %}
                  <div class="mb-40 px-30 md:w-1/2">
                    {% include '_blocks/statistics/statistic.twig' ignore missing %}
                  </div>
                {% endfor %}
              </div>
            {% endif %}

            {% if block.attribution %}
              <p class="text mt-20 text-gray-a11y text-11 md:mt-25 lg:mt-30">
                {{ block.attribution }}
              </p>
            {% endif %}
          </div>
          <div class="hidden px-30 w-full lg:block lg:w-1/3">
            {% set image = TimberImage(block.image) %}

            {% if image %}
              <img
                src="{{ image.src | resize(1440, 900) }}"
                srcset="{{ image.srcset }}"
                alt="{{ image.alt }}"
              />
            {% endif %}
          </div>
        </div>
      {% elseif block.text %}
        <div class="flex flex-wrap -mx-30">
          <div class="mb-30 px-30 w-full lg:mb-0 lg:w-1/3">
            {% if block.heading %}
              <h2 class="heading-4">
                {{ block.heading }}
              </h2>
            {% endif %}

            {% if block.text %}
              <div class="text">
                {{ block.text }}
              </div>
            {% endif %}

            {% if block.button_clone_link and block.button_clone_text %}
              <a class="link" href="{{ block.button_clone_link }}">
                {{ block.button_clone_text }}
                {{ svg('link') }}
              </a>
            {% endif %}
          </div>
          <div class="px-30 w-full lg:w-2/3">
            {% if block.statistics | length %}
              <div class="flex flex-wrap -mb-40 -mx-30">
                {% for statistic in block.statistics %}
                  <div class="mb-40 px-30 md:w-1/2">
                    {% include '_blocks/statistics/statistic.twig' ignore missing %}
                  </div>
                {% endfor %}
              </div>
            {% endif %}

            {% if block.attribution %}
              <p class="text mt-20 text-gray-a11y text-11 md:mt-25 lg:mt-30">
                {{ block.attribution }}
              </p>
            {% endif %}
          </div>
        </div>
      {% else %}
        {% if block.heading %}
          <h2 class="heading-6">
            {{ block.heading }}
          </h2>
        {% endif %}

        {% if block.statistics | length %}
          <div class="flex flex-wrap -mb-30 -mx-30 lg:-mb-40">
            {% for statistic in block.statistics %}
              <div class="mb-30 px-30 lg:mb-40 md:w-1/2 lg:w-1/3">
                {% include '_blocks/statistics/statistic.twig' ignore missing %}
              </div>
            {% endfor %}
          </div>
        {% endif %}

        {% if block.attribution %}
          <p class="text mt-20 text-gray-a11y text-11 md:mt-25 lg:mt-30">
            {{ block.attribution }}
          </p>
        {% endif %}
      {% endif %}
    </div>
  </section>
{% endif %}
