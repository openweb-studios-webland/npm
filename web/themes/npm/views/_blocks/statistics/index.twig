{% set block = block ?? null %}

{% if block %}
  <section class="section" data-label="{{ block.acf_fc_layout }}">
    <div class="container">
      <div class="flex flex-wrap -mx-30">
        <div class="mb-30 lg:mb-0 px-30 lg:w-1/3">
          {% if block.heading %}
            <h2 class="heading-4">
              {{ block.heading }}
            </h2>
          {% endif %}

          {% if block.text %}
            <div class="text">
              {{ block.text }}
            </div>
          {% endif %}

          {% if block.button_link and block.button_text %}
            <a class="link" href="{{ block.button_link }}">
              {{ block.button_text }}
              {{ svg('link') }}
            </a>
          {% endif %}
        </div>

        {% if block.statistics | length %}
          <div class="px-30 lg:w-2/3">
            <div class="flex flex-wrap -mb-30 -mx-30 lg:-mb-40">
              {% for statistic in block.statistics %}
                <div class="mb-30 px-30 lg:mb-40 md:w-1/2">
                  {% if statistic.heading %}
                    <h3 class="heading-2 mb-0">
                      {{ statistic.heading }}
                    </h3>
                  {% endif %}

                  {% if statistic.text %}
                    <div class="text mt-10">
                      {{ statistic.text }}
                    </div>
                  {% endif %}
                </div>
              {% endfor %}
            </div>
          </div>
        {% endif %}
      </div>
    </div>
  </section>
{% endif %}
