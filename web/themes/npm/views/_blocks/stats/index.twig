{% set block = block ?? null %}

{% if block %}
  {% set image = TimberImage(block.background_image) %}

  <section
    class="{{ block.color_select != 'white' and block.color_select != 'gray' ? 'text-white ' }}bg-{{ block.color_select }} stats section bg-no-repeat bg-right"
    {{ block.type == '2_column_image' ? 'style="background-image: url(' ~ image | resize(1080, 1080) ~ ');' }}
    data-label="stats"
  >
    <div class="container">
      {% if block.type == '2_column' or block.type == '2_column_image' %}
        <div class="flex flex-wrap -mb-30 -mx-30">
          {% if block.type == '2_column' %}
            <div class="mb-30 px-30 w-full lg:w-1/3">
              {% if block.heading %}
                <h2 class="heading-3">
                  {{ block.heading }}
                </h2>
              {% endif %}

              {% if block.text %}
                <div class="text">
                  {{ block.text }}
                </div>
              {% endif %}

              {% if block.button_link and block.button_text %}
                <a class="arrow mt-20 text-link-blue" href="{{ block.button_link }}">
                  {{ block.button_text }}
                  {{ svg('arrow-right') }}
                </a>
              {% endif %}
            </div>
          {% endif %}

          <div class="mb-30 px-30 w-full lg:w-2/3">
            {% if block.type == '2_column_image' and block.heading %}
              <h2 class="heading-3">
                {{ block.heading }}
              </h2>
            {% endif %}

            {% if block.stats | length %}
              <div class="flex flex-wrap -mb-30 -mx-30">
                {% for stat in block.stats %}
                  <div class="mb-30 px-30 w-full md:w-1/2 lg:w-1/2">
                    {% include '_blocks/stats/stat.twig' ignore missing %}
                  </div>
                {% endfor %}
              </div>
            {% endif %}

            {% if block.attribution %}
              <p class="text italic mt-30 opacity-75 text-11 md:mt-25">
                {{ block.attribution }}
              </p>
            {% endif %}
          </div>
        </div>
      {% else %}
        {% if block.heading %}
          <h2 class="{{ block.color_select != 'white' and block.color_select != 'gray' ? 'text-blue-light ' }}heading-6">
            {{ block.heading }}
          </h2>
        {% endif %}

        {% if block.stats | length %}
          <div class="flex flex-wrap -mb-30 -mx-30">
            {% for stat in block.stats %}
              <div class="mb-30 px-30 w-full md:w-1/2 lg:w-1/3">
                {% include '_blocks/stats/stat.twig' ignore missing %}
              </div>
            {% endfor %}
          </div>
        {% endif %}

        {% if block.attribution %}
          <p class="text italic mt-30 opacity-75 text-11 md:mt-25">
            {{ block.attribution }}
          </p>
        {% endif %}
      {% endif %}
    </div>
  </section>
{% endif %}
