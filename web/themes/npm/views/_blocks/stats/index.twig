{% set block = block ?? null %}

{% if block %}
  <section class="section" data-label="{{ block.acf_fc_layout }}">
    <div class="container">
      <div class="lg:flex lg:-mx-30">
        <div class="mb-30 lg:mb-0 lg:px-30 lg:w-1/3">
          {% if block.heading %}
            <h2 class="heading-4">
              {{ block.heading }}
            </h2>
          {% endif %}

          {% if block.text %}
            <div class="text">
              {{ block.text }}
            </div>
          {% endif %}

           {% if block.button_link and block.button_text %}
              <a class="link mt-20 md:mt-25 lg:mt-30" href="{{ block.button_link }}">
                {{ block.button_text }}
                {{ svg('link', {attr: {class: 'fill-current'}}) }}
              </a>
            {% endif %}
        </div>
        {% if block.stats | length %}
          <div class="lg:px-30 lg:w-2/3">
            <div class="-mb-30 lg:flex lg:flex-wrap lg:-mb-40 lg:-mx-30">
              {% for stat in block.stats %}
                <div class="mb-30 lg:mb-40 lg:px-30 lg:w-1/2">
                  <p>
                    {% if stat.heading %}
                      <span class="heading-2 block mb-10">
                        {{ stat.heading }}
                      </span>
                    {% endif %}

                    {% if stat.text %}
                      {{ stat.text }}
                    {% endif %}
                  </p>
                </div>
              {% endfor %}
            </div>
          </div>
        {% endif %}
      </div>
    </div>
  </section>
{% endif %}
