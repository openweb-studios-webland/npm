{% set block = block ?? null %}

{% if block %}
  <section class="section bg-teal pt-0 lg:pb-0" data-label="testimonials-front-page">

    {% if block.testimonials | length %}
      <div class="relative overflow-x-hidden" data-module="carousel">
        <div class="carousel-track flex relative" data-carousel-track>
          {% for testimonial in block.testimonials %}
            <div class="flex-0 w-full" data-carousel-item>
              <div class="container">
                {% include '_blocks/testimonials-front-page/testimonial.twig' ignore missing %}
              </div>
            </div>
          {% endfor %}
        </div>

        {% if block.testimonials | length > 1 %}
          <div class="lg:absolute lg:bottom-0 lg:left-0 lg:mb-50 lg:w-full">
            <div class="container">
              <div class="flex justify-center opacity-50 mt-30 -mx-5 text-white lg:justify-start lg:mt-0">
                <div class="px-5">
                  {% include '_partials/carousel/button-prev.twig' ignore missing only %}
                </div>
                <div class="px-5">
                  {% include '_partials/carousel/button-next.twig' ignore missing only %}
                </div>
              </div>
            </div>
          </div>
        {% endif %}
      </div>
    {% endif %}
  </section>
{% endif %}
