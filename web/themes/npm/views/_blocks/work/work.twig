{% if work.type == 'audio' %}
  {% set audio = work.get_field('audio') ?? null %}

  {% include '_partials/audio.twig' ignore missing with {
    audio: audio,
    image: block.image,
  } only %}

  <div class="mt-20">
    <h3 class="heading-7 mb-10">
      {{ work.title }}
    </h3>

    {% if work.text %}
      <p class="text text-14">
        {{ work.text }}
      </p>
    {% endif %}

    <a class="link text-14">
      View the work
      {{ svg('link') }}
    </a>
  </div>
{% elseif work.type == 'video' %}
  {% set video = work.get_field('video') ?? null %}

  {% include '_partials/video.twig' ignore missing with {
    video: video,
    image: block.image,
  } only %}

  <div class="mt-20">
    <h3 class="heading-7 mb-10">
      {{ work.title }}
    </h3>

    {% if work.text %}
      <p class="text text-14">
        {{ work.text }}
      </p>
    {% endif %}

    <a class="link text-14">
      View the work
      {{ svg('link') }}
    </a>
  </div>
{% else %}
  {% include '_partials/image.twig' ignore missing with {
    image: block.image,
  } only %}

  <div class="mt-20">
    <h3 class="heading-7 mb-10">
      {{ work.title }}
    </h3>

    {% if work.text %}
      <p class="text text-14">
        {{ work.text }}
      </p>
    {% endif %}

    <a class="link text-14">
      View the work
      {{ svg('link') }}
    </a>
  </div>
{% endif %}
