{%- import '_macros/index.twig' as macros -%}

{% set color_select = color_select ?? 'blue' %}
{% set image = image ?? null %}
{% set heading = heading ?? null %}
{% set text = text ?? null %}
{% set button_link = button_link ?? null %}
{% set button_text = button_text ?? null %}

<section class="{{ color_select != 'white' and all_to_action.color_select != 'gray' ? 'text-white ' }}bg-{{ color_select }} text-center" data-label="call-to-action">
  {% if image %}
    <div class="lg:pt-50">
      <div class="container">
        <div class="flex flex-wrap items-center -mx-30">
          {% if image %}
            <div class="px-30 hidden w-full lg:block lg:w-1/3">
              {{ macros.responsiveImage(image, 960, 960) }}
            </div>
          {% endif %}

          <div class="section px-30 w-full lg:w-2/3">
            {% include '_partials/cta/cta.twig' ignore missing %}
          </div>
        </div>
      </div>
    </div>
  {% else %}
    <div class="section">
      <div class="container-md">
        {% include '_partials/cta/cta.twig' ignore missing %}
      </div>
    </div>
  {% endif %}
</section>
