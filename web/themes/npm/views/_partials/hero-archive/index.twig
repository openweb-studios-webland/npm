{% set heading = heading ?? null %}
{% set text = text ?? null %}

<section class="bg-gradient py-30 text-white md:py-40 lg:py-50" data-label="hero-archive">
  <div class="container">
    <div class="flex flex-wrap items-center -mx-30">
      <div class="px-30 w-full lg:w-1/3">
        {% if heading %}
          <h1 class="heading-2 lg:mb-0">
            {{ heading }}
          </h1>
        {% endif %}
      </div>

      <div class="px-30 w-full lg:w-2/3">
        {% if text %}
          <p class="text">
            {{ text }}
          </p>
        {% endif %}
      </div>
    </div>
  </div>
</section>
