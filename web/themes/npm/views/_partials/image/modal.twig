{%- import '_macros/index.twig' as macros -%}

{% set images = images ?? [] %}
{% set uid = uid ?? null %}

{% if images | length %}
  {% if images | length > 1 %}
    {% set content %}
      <div data-module="slick" data-slick=''>
        {% for image in images %}
          <div class="h-full">
            <div class="flex flex-col h-full justify-center">
              {% if image.id %}
                {{ macros.responsiveImage(image.id, 1920) }}
              {% endif %}

              {% if image.caption %}
                <p class="text mt-20 text-14">
                  {{ image.caption }}
                </p>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>

      <div class="flex mt-30 -mx-5">
        <div class="px-5">
          {% include '_partials/carousel/button-prev.twig' ignore missing with {
            classes: 'text-blue transition-fast hover:text-blue-light',
          } only %}
        </div>

        <div class="px-5">
          {% include '_partials/carousel/button-next.twig' ignore missing with {
            classes: 'text-blue transition-fast hover:text-blue-light',
          } only %}
        </div>
      </div>
    {% endset %}
  {% else %}
    {% set content %}
      {% if images[0].id %}
        {{ macros.responsiveImage(images[0].id, 1920) }}
      {% endif %}

      {% if images[0].caption %}
        <p class="text mt-20 text-14">
          {{ images[0].caption }}
        </p>
      {% endif %}
    {% endset %}
  {% endif %}

  {% include '_partials/modal.twig' ignore missing with {
    content: content,
    classes: 'bg-gray',
    uid: uid,
  } only %}
{% endif %}
