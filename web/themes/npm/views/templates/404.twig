{% extends '_layouts/base.twig' %}

{% block content %}
  <section class="section" data-label="hero-error-404">
    <div class="container-sm text-center">
      {% if globals.error_404_heading %}
        <h1 class="heading-2">
          {{ globals.error_404_heading }}
        </h1>
      {% endif %}

      {% if globals.error_404_text %}
        <div class="text">
          {{ globals.error_404_text }}
        </div>
      {% endif %}

      {% set button_link = globals.error_404_button.link | length ? globals.error_404_button.link : '/' %}
      {% set button_text = globals.error_404_button.text | length ? globals.error_404_button.text : 'Go to Homepage' %}
      <a
        class="button mt-25"
        href="{{ button_link }}"
        data-track-gtm="Call to Action|{{ current_url }}|{{ button_text }}:{{ button_link }}"
      >
        {{ button_text }}
      </a>
    </div>
  </section>

  {% if globals.error_404_call_to_action | length %}
    {% include '_partials/cta/index.twig' ignore missing with {
      color_select: globals.error_404_call_to_action.color_select,
      image: globals.error_404_call_to_action.image,
      heading: globals.error_404_call_to_action.heading,
      text: globals.error_404_call_to_action.text,
      button_link: globals.error_404_call_to_action.button_link,
      button_text: globals.error_404_call_to_action.button_text,
    } only %}
  {% endif %}
{% endblock %}
