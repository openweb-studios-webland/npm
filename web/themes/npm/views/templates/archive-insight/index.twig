{% extends '_layouts/base.twig' %}

{% block content %}
  <div data-label="archive-service">
    {% if fields.blocks %}
      {% for block in fields.blocks %}
        {% include '_blocks/' ~ block.acf_fc_layout ~ '/index.twig' ignore missing with {
          block: block
        } %}
      {% endfor %}
    {% endif %}

    {% if insights | length %}
      <div class="container">
        <div data-module="infinite-scroll" data-infinite-scroll-count="{{ insights.pagination.total }}">
          <div class="flex flex-wrap -mx-30" data-infinite-scroll-container>
            {% for insight in insights %}
              <div class="mb-40 px-30 w-full md:w-1/2 lg:w-1/3">
                {% include '_blocks/insights/insight-small.twig' ignore missing %}
              </div>
            {% endfor %}
          </div>

          {% if insights.pagination.next %}
            <div class="mt-50 text-center">
              <a
                class="button-outline-crimson button-small"
                href="{{ insights.pagination.next.link }}"
                data-infinite-scroll-trigger
              >
                Load More
              </a>
            </div>
          {% endif %}
        </div>
      </div>
    {% endif %}
  </div>
{% endblock %}
