{% extends '_layouts/base.twig' %}

{% block content %}
  <div data-label="archive-product">
    {% if fields.blocks %}
      {% for block in fields.blocks %}
        {% include '_blocks/' ~ block.acf_fc_layout ~ '/index.twig' ignore missing with {
          block: block
        } %}
      {% endfor %}
    {% endif %}

      {% if products | length %}
      <div class="bg-gray py-50">
        <div class="container-lg">
          {% include 'templates/archive-product/platforms.twig' ignore missing %}

          <div class="flex flex-wrap -mb-20 -mx-10 pt-50">
            {% for product in products %}
              <div class="mb-20 px-10 w-full md:w-1/2 lg:w-1/4">
                {% include 'templates/archive-product/product.twig' ignore missing %}
              </div>
            {% endfor %}
          </div>
        </div>
      </div>
    {% endif %}
  </div>
{% endblock %}
