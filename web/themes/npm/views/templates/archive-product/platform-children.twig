{% if current_platforms.parents | length and platforms.children | length %}
  <div class="border-t border-gray-border overflow-hidden">
    <div class="-mb-20 overflow-x-auto py-20">
      <ul class="flex items-center -mx-10 text-12 lg:-mx-15">
        {% for platform in platforms.children if platform.current_item_parent %}
          <li class="px-10 lg:px-15">
            {% if platform.current and platform.current_item_parent %}
              <a class="bg-blue-link flex font-bold inline-block items-center px-10 py-5 rounded-full text-white whitespace-no-wrap" href="{{ fn('add_query_arg', 'platform', platform.current_item_others | join(',') ) }}">
                {{ platform.name }}
                {{ svg('clear', { classes: 'ml-5' }) }}
              </a>
            {% else %}
              <a class="font-bold inline-block text-gray-a11y whitespace-no-wrap" href="{{ fn('add_query_arg', 'platform', current_platforms.children | merge([platform.slug]) | merge([platform.item_parent.slug]) | join(',') ) }}">
                {{ platform.name }}
              </a>
            {% endif %}
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
{% endif %}
